@model IEnumerable<Lab.Net.MVC.Models.EmpleadoView>
@{
    ViewBag.Title = "Empleados Page";
}

<head>
</head>

<h1>Listado de Empleados</h1>



  <div class="container">
      <form method="get" action="@Url.Action("Index", "Empleados")">
          <div class="row">
              <div class="col-md-6">
                  <div class="input-group mb-3">
                      @Html.TextBox("cadenaBuscar", null, new { @class = "form-control", placeholder = "Buscar" })
                      <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Buscar</button>
                  </div>
              </div>
      </form>
      <div class="col-md-6 text-end">
          @Html.ActionLink("Insertar Empleado", "InsertarModificar",
         "Empleados", new { @class = "btn btn-outline-secondary" })
      </div>
  </div>



<table class ="table table-dark" style="margin-top:10px">
    <thead>

        <tr>

            <th scope="col">Nombre</th>
            <th scope="col">Apellido</th>
            <th scope="col">Eliminar</th>
            <th scope="col">Modificar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var empleados in Model)
        {
            <tr>

                <th scope="row">@empleados.Nombre</th>
                <td>@empleados.Apellido</td>
                <td>@Html.ActionLink("Eliminar", "Eliminar", new { id = empleados.Id },new { onclick = "return confirm('Esta seguro que desea Eliminar?')" })</td>
                <td>@Html.ActionLink("Modificar", "InsertarModificar", new { id = empleados.Id })</td>
            </tr>
        }
    </tbody>
</table>



